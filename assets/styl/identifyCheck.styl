.content
    padding 0 6.5px
    p.desc
        font-size 14px
        font-weight 500
    .input-wrap
        font-size 15px
        h2
            font-weight bold
            margin 17px 0 13px
        input[type=text]
            width 100%
            line-height 37px
            border-radius 10px
            border 1.2px solid #797979
            text-indent 10px
    .section1
        font-size 14px
        h2
            margin 17px 0 12.5px
            font-size 15px
            font-weight bold
        .tip
            color #868686
        .example
            display flex
            justify-content space-around
            margin-top 11px
            .port
                display flex
                flex-direction column
                align-items center
                img
                    width 155px
                    height 105px
                    // border-radius: (20px/2)
                    // border (2px/2) solid #6D6D6D
                span
                    font-size 15px
                    margin-top 7.5px
        .IDCard-upload
            display flex
            justify-content space-around
            margin-top 11px
            margin-bottom 65px
            .port
                display flex
                flex-direction column
                justify-content center
                align-items center
                width 155px
                height 105px
                border 1.2px solid #797979
                border-radius 7.5px
                position relative
                background-size contain
                background-position top center
                background-repeat no-repeat
                img
                    width 25px
                    height 25px
                span
                    font-size 12px
                    margin-top 13px
                input[type=file]
                    width 100%
                    height 100%
                    opacity 0
                    position absolute
                    top 0
                    left 0
.submit
    height 50px
    line-height 50px
    font-size 16px
    background #00CCCC
    color #ffffff
    position fixed
    bottom 0
    left 0
.color-white
    color #fff