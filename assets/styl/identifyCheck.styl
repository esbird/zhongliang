body
    padding-bottom: 100px
header
    background #E5CABF
.content
    padding:40px 26px 0
    p.desc
        font-size 28px
        font-weight 500
    .input-wrap
        font-size 30px
        h2
            font-weight bold
            margin 35px 0 25px
        input[type=text]
            width 100%
            line-height 75px
            border-radius 20px
            border 2px solid #797979
            text-indent 20px
    .section1
        font-size: 28px
        h2
            margin 35px 0 25px
            font-size: 30px
            font-weight: bold
        .tip
            color: #868686
        .example
            display flex
            justify-content: space-around
            margin-top: 22px
            .port
                display flex
                flex-direction: column
                align-items: center
                img 
                    width: 310px
                    height 210px
                    // border-radius: 20px
                    // border 2px solid #6D6D6D
                span 
                    font-size:30px
                    margin-top: 15px
        .IDCard-upload
            display flex
            justify-content: space-around
            margin-top: 22px
            margin-bottom: 130px
            .port
                display flex
                flex-direction: column
                justify-content: center
                align-items: center
                width: 310px
                height 210px
                border 2px solid #797979
                border-radius: 15px
                position relative
                img 
                    width 50px
                    height 50px
                span 
                    font-size: 24px
                    margin-top: 26px
                input[type=file]
                    width: 100%
                    height 100%
                    opacity 0
                    position absolute
                    top: 0
                    left 0

.submit
    height 100px
    line-height: 100px
    font-size: 32px
    background #00CCCC
    color: #ffffff
    position fixed
    bottom: 0
    left 0