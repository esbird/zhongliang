body
    background #f2f2f2
    min-height 100vh
.content
    width 100%
    padding 10px 10px 0
.section1
    width 100%
    height 160px
    border-radius 15px
    background #fff
    font-size 32px
    display flex
    align-items: center
    justify-content: space-between
    padding: 0 22px
    .head-pic
        width: 95px
        height 95px
        border 5px solid #FEE9E8
        border-radius: 50%
    .port1
        display flex
        &>div
            margin-left: 26px
            height 96px
            display flex
            font-size: 32px
            flex-direction: column
            justify-content: space-between
    .port2
        display flex
        flex-direction: column
        align-items: flex-end
        font-size: 32px
        height 96px
        justify-content: space-between
        img 
            width: 36px
            height 36px
            margin 0 12px
        p
            display flex
            align-items: center
        p:nth-child(2)
            color: #A1A1A1
            font-size: 24px
            .iconfont
                font-size: 30px
                margin-left: 12px
        