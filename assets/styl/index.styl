body
    background: #fff
.content
    position relative
    display block
.img_wrap
    width: 100%
    height 750px
    .swiper-silde
        height 750px
        background-size: contain
        background-repeat: no-repeat
        background-position: top center
.btn-wrap
    position absolute
    bottom: -30px
    left: 50%
    transform: translate3d(-50%,0,0)
    display flex
    width: 620px
    justify-content: space-between
    z-index: 2

    li
        box-shadow: 5px 5px 5px #D7D7D7;
        background #fff
        border-radius: 50%

        width: 128px
        height 128px
        display flex
        justify-content: space-around
        align-items: center
        img
            width: 70px
            height 70px
.text-wrap
    .baseInfo
        height 190px
        font-size: 28px
        padding:46px 30px 50px
        box-sizing: border-box
        .iconfont
            font-size: 40px
        .brief
            span ~span
                margin-left: 30px
        .nickname
            float left
            font-weight: bold
        .sex
            float left
            color: #E89ABE
            margin-left: 90px;
        .addr
            float right
            color: #6B6B6B
            .icon-zuobiao
                color: #BC8176
.line
    width: 100%
    height 15px
    background #F2F2F2
.tag-wrap
    box-sizing: border-box
    padding:28px
    .title
        font-size: 28px
        font-weight: 500
        margin-bottom: 28px
.baseInfo-tag
    display flex
    flex-wrap: wrap
    font-size: 26px
    color: #BC8176
    .tag-item
        width: 140px
        height 50px
        border-radius: 12px
        line-height: 1.5
        border: 2px solid #BC8176
        text-align: center
        margin:20px 14px 0
.neixindubai
    box-sizing: border-box
    padding: 28px
    font-size: 28px
    font-weight: 500
    p
        margin-top: 30px
        word-wrap: break-word;


            

