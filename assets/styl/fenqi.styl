.content
  padding: 10px
  height 100vh
  background #EEEDF2
  overflow auto
  .broad
    width: 100%
    box-shadow: 2.5px 2.5px 2.5px rgba(0,0,0,.18)
    background #fff
    padding 0 11px
    .top
      height 60px
      border-bottom: 1px solid #BCBCBC
      display: flex
      flex-direction: column
      justify-content: space-around
      align-items: center
      padding: 6px 0 0
      p
        font-size: 10px
        color: #869BC2
      h2
        font-size: 20px
    .bottom
      height 95px
      display: flex
      flex-direction: column
      justify-content: space-around
      font-size: 12px
      color: #868686
      padding: 4px 0
  ul
    li
      height 75px
      background #fff
      padding 8px 0
      border-width 0 0 0 5px
      border-style: solid
      border-color #A1A1A1
      display: flex
      margin-top: 10px
      div
        height 100%
        color #868686
      .left
        width: 75px
        border-right 1px solid #D7D7D7
        display: flex
        flex-direction column
        align-items: center
        justify-content: space-around
        font-size: 12px
        h2
          font-size: 15px
      .right
        flex 1
        display: flex
        flex-direction column
        // align-items: center
        justify-content: space-around
        padding-left: 22px
        p
          span~span
            margin-left: 10px
            color: #000
