body
    background #f2f2f2
header 
    background #E6C9BE
.section1
    color: #fff
    display flex
    flex-direction: column
    align-items: center
    background #E4E4E4
    height 400px
    justify-content: center
    img 
        width 165px
        height 165px
        border:4px solid #ffffff
        border-radius: 50%
        margin-bottom: 20px
    .percentage_wrap
        font-size: 28px
        &>p
            text-align: center
            line-height: 2
        .percentage
            width: 300px
            height 8px
            border:2px solid #fff
            border-radius: 4px
            overflow: hidden
            p
                background #fff
                height 100%
.section2
    display flex
    box-sizing: border-box
    padding: 0 20px
    justify-content space-between
    height 122px
    align-items: center
    background #fff
    font-size: 32px
    span:nth-child(2)
        margin-right:-60%
        color: #FF9963
    .iconfont
        font-size: 40px
.section3
    // height 2.5px
    background #fff
    // box-sizing: border-box
    padding:60px 20px
    display: flex
    margin-top: 10px
    ul
        display flex
        flex-wrap: wrap
        li
            box-sizing: border-box
            width: 130px
            height 130px
            border-radius: 10px
            background-position: center
            background-repeat: no-repeat
            background-size: cover
            margin: 20px
            text-align: center
            img 
                height 100%
                width: auto
            &.add
                background url('~static/add.png') no-repeat center /74px 74px
                border: 2px solid #F74A63
                input[type=file]
                    width: 100%
                    height 100%
                    opacity 0
.title
    font-size: 26px
    line-height: 75px
    font-weight: bold
    text-indent: 25px

.section4
    box-sizing: border-box
    padding: 0 27px
    font-size: 30px
    background #fff
    li
        padding: 20px 0
        &~li
            border-top: 2px solid #F2F2F2
            display flex
            box-sizing: border-box
            padding-right: 40px
            justify-content: space-between
            align-items: center
            position relative
            height 118px
            &:before
                content: ''
                width: 30px
                height 30px
                position absolute
                top: 50%
                right: 0
                transform: translate3d(0,-50%,0)
                background: url('~static/arrow.png') center/30px 30px no-repeat
            .value
                appearance none
                border none 
                font-size: 30px
                // margin-right: -80%
                float right
                width: auto
                color: #949494
    .nickname
