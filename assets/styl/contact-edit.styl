#contacts
    min-height 100vh
    background #EEEDF2
    overflow hidden
    ul.contact-wrap
        overflow hidden
        li
            display flex
            width 355px
            border-radius 5px
            background-color #003366
            padding-left 14px
            height 75px
            align-items center
            justify-content space-between
            // background #fff
            // border-bottom 1px solid #797979
            margin 20px auto 0
            position relative
            .status
                position absolute
                top 50%
                right 16px
                transform translate3d(0, -50%, 0)
                font-size 18px
                color #fff
            .contact-bg
                position absolute
                width 54px
                height 54px
                bottom 0
                right 22px
                opacity 0.6
            h2, p
                line-height 1.5
                color #fff
            h2
                font-size 16px
            p
                font-size 9px
                // color #797979
            .port-right
                width 50px
                height 45px
                display flex
                align-items center
                justify-content space-around
                border-left 2px solid #D7D7D7
                font-size 9px
                // color #CC3300
                span:active
                    opacity 0.6
.add
    position fixed
    bottom 10px
    left 50%
    transform translate3d(-50%, 0, 0)
    display block
    // margin 15px auto 0
    width 355px
    background #003366
    color #fff
    border-radius 5px
.contact-edit
    width 224px
    height 222px
    border-radius 5px
    overflow unset
    ul
        text-align: center
        li
            height: 38px
            display flex
            align-items: center
            justify-content: center
            margin-top: 8px
            input
                font-size: 16px
                text-indent: 6px
                border-width:0 0 1px 0
                border-color:#003366
                width: 140px
                line-height: 34px
            img
                width: 27px
                height 27px
                margin-right: 10px
        .save
            width: 110px
            height 37.5px
            color: #ffffff
            background #003366
            font-size: 14px
            border:none
            border-radius: 5px
            margin: 30px auto 0
    .close
        width: 15px
        height 15px
        // display block
        // font-size: 10px
        // display: flex
        // justify-content: space-between
        // align-items: center
        border-radius: 50%
        background #606060
        // color #fff
        // border:1px solid #606060
        position absolute
        top: 0
        right: 0
        transform: translate3d(50%,-50%,0)
