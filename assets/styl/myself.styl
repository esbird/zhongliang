body
    background #E7C6BC
.brief-wrap
    display flex
    flex-direction: column
    align-items: center
    color: #fff
    img 
        width: 130px
        height 130px
        border:3px solid #FEE9E8
        border-radius: 50%
        margin: 22px 0
    p
        font-size: 36px
        font-weight: bold
        
    button 
        font-size: 24px
        width: 235px
        height 50px
        border-radius: 25px
        line-height: 1.5
        background #fff
        border:none
        color: #BC8176
        margin: 20px 0 23px
.menu
    background transparent
    font-size: 32px
    margin: 20px auto 0
    width: 700px
    border-radius: 20px
    overflow: hidden
    .menu_item
        line-height: 108px
        background #fff
        width: 700px
        display flex
        align-items: center
        justify-content: space-between
        box-sizing: border-box
        padding: 0 20px
        &~.menu_item
            border-top: 2px solid #F2F2F2
        img 
            width: 53px
            height 53px
            float left
            display inline-block
        .iconfont
            font-size: 50px
        span 
            margin-left: -60%
