.content
    background: #fff
    padding-bottom: 50px;
.img-wrap
    width: 100%
    height 200px
    text-align center
    background-color: #D7D7D7
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain
    overflow hidden
.pic
    height 200px
    width auto
    margin 0 auto
.nav-wrap
  height 90px
  display flex
  justify-content: space-around
  align-items: center
  li
    display: flex
    flex-direction: column
    align-items: center
    color: #797979
    span 
      margin-top: 4px
    .img-wrap
      width: 50px
      height 50px
      border-radius: 7.5px
      background: linear-gradient(150deg, #2554AC, #003366)
      display flex
      align-items: center;
      justify-content: space-around
      .iconfont
        font-size: 30px
        color: #fff
.cont
  background #f2f2f2
  padding 5px
  .news-block
    border-radius: 7.5px
    background #fff
    padding 9px
    h2
      font-size: 16px
      border-bottom: 1px solid #AEAEAE
      margin-bottom: 5px
      line-height: 1.5
      color:#5e5e5e
    .news-cont
      display: flex
      justify-content: space-between
      .port-left
        width: 195px
        height 120px
        position relative
        background: url('~/static/news-bg.png') top center/cover no-repeat;
        p
          position absolute
          bottom: 0;
          left: 0;
          font-size: 12px
          line-height: 25px
          background rgba(0,0,0,.3)
          color: #ffffff
          padding: 0 8px
          display block
          width: 100%
      .port-right
        width: 148px
        font-size: 12px
        // height 100%
        display flex
        flex-direction: column
        justify-content: space-between

        li
          display flex
          justify-content: space-between
          line-height: 26px
          border-bottom: 1px solid #AEAEAE
  .desc-block
    background #fff
    border-radius: 7.5px
    margin-top: 22px
    padding: 9px
    h2
      font-size: 16px
      border-bottom: 1px solid #AEAEAE
      margin-bottom: 5px
      line-height: 1.5
      color: #5e5e5e
    p
      font-size: 14px
      text-indent: 2em
      line-height: 1.2
      color: #333
      font-weight: 500
      
